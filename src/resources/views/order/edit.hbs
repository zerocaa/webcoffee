<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/order/{{orders._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{orders.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" value="{{orders.email}}" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="description">Ghi Chú Khi Order</label>
            <textarea class="form-control" id="description" name="description">{{orders.description}}</textarea>
        </div>       
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>